<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_blue">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/lv_received_cv_cornerradius"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214">


        <ImageView
            android:id="@+id/iv_receiver_image"
            android:layout_width="@dimen/lv_received_cv_iv_width"
            android:layout_height="@dimen/lv_received_cv_iv_height"
            android:layout_marginTop="@dimen/lv_received_cv_iv_margintop"
            android:layout_marginStart="@dimen/lv_received_cv_iv_marginstart"
            android:contentDescription="@string/content_description_image_listview_chat"
            android:src="@drawable/logony" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/lv_conversations_cv_tv_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lv_received_cv_tv_marginstart"
            android:text="@string/chat_message_received"
            android:textColor="@color/black"
            android:textSize="@dimen/font_medium" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>